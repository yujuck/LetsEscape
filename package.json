{
  "name": "lets-escape",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rimraf node_modules",
    "dev:api": "pnpm --filter @lets-escape/api dev",
    "dev:web": "pnpm --filter @lets-escape/web dev",
    "build:api": "pnpm --filter @lets-escape/api build",
    "build:web": "pnpm --filter @lets-escape/web build",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "turbo": "^2.8.3"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
